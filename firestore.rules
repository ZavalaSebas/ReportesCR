rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reports collection rules - Public read, authenticated write
    match /reports/{reportId} {
      // Allow read access to everyone (public viewing)
      allow read: if true;
      
      // Allow create access to authenticated users with proper data structure
      allow create: if request.auth != null 
        && request.auth.uid != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['title', 'serviceType', 'provider', 'description', 'location', 'userId', 'userEmail', 'createdAt', 'confirmations', 'confirmed_by']);
      
      // Allow update for confirmations - both authenticated and anonymous users
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['confirmations', 'confirmed_by'])
        && request.resource.data.confirmations == resource.data.confirmations + 1;
      
      // Allow update for provider merging - authenticated users can merge providers
      allow update: if request.auth != null 
        && request.auth.uid != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['provider', 'confirmed_by']);
        
      // Allow update for provider only - authenticated users
      allow update: if request.auth != null 
        && request.auth.uid != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['provider']);
    }
  }
}